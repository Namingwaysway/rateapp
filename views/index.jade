extends layout

block content
  h1= title
  #spacer(style = "height: 150px")
  #mainpanel(style = "width: 600px; margin: auto;")
    .panel.panel-default
      .panel-heading(style = "padding: 3px;")
        #amperstand(style = "  position: relative; \
                                left: 10px; \
                                top: -140px; \
                                text-align:left;\
                                font-size:1900%;\
                                float: left; \
                                height: 100px;\
                                z-index: 10;")
          |&
        #boxtitle(style = "font-size:300%; \
                            position: relative;\
                            left: -40px;")
          |Amperstand
      .panel-body.height(style="height: 150px; text-align: center;")
          form(method='post',action='/users/', onsubmit="window.location.href = '/users/' + document.getElementById('username').value + '@' + document.getElementById('site_select').value; return false;")
              input(type='text',name='username',id='username',placeholder='Username')
              span(style="font-size:200%")
                |@
              select(name='site_select', id='site_select')
                  each site, i in sites
                      option(value='#{site}') #{site}

              input(type='button',name='submit',value='Submit', onclick="window.location.href = '/users/' + document.getElementById('username').value + '@' + document.getElementById('site_select').value;").
    hr
    #footer(style = "width: 600px; margin: auto; text-align: center;")
      |Amperstand lets you rate the people you date.
